    android:layout_height="match_parent"
    android:id="@+id/horizontal_photo_gallery">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
